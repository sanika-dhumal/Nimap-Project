<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Master</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <style>
    body { background-color: #f8f9fa; }
    .card { box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
    .table-hover tbody tr:hover { background-color: #e9ecef; }
    .form-inline { display: flex; gap: 10px; flex-wrap: wrap; }
    .form-inline input, .form-inline select { flex: 1; }
    .pagination { gap: 5px; }
  </style>
</head>
<body class="container mt-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"> Product Master</h2>
    <div>
      <!-- Button to go to Home Page -->
      <a href="/" class="btn btn-info me-2"> Home</a>
      <!-- Button to go to Category Page -->
      <a href="/categories" class="btn btn-secondary">Go to Category Master</a>
    </div>
  </div>

  <!-- Add/Edit Product Card -->
  <div class="card mb-4 p-4 bg-white">
    <h5 class="card-title text-success mb-3">
      <%= productToEdit ? 'Edit Product' : 'Add New Product' %>
    </h5>
    <form action="<%= productToEdit ? '/products/update/' + productToEdit.ProductId : '/products/add' %>" method="post" class="form-inline mb-3">
      <input type="text" name="ProductName" class="form-control" placeholder="Product Name" required
             value="<%= productToEdit ? productToEdit.ProductName : '' %>">
      <select name="CategoryId" class="form-control" required>
        <option value="">Select Category</option>
        <% categories.forEach(cat => { %>
          <option value="<%= cat.CategoryId %>" <%= productToEdit && productToEdit.CategoryId === cat.CategoryId ? 'selected' : '' %> >
            <%= cat.CategoryName %>
          </option>
        <% }) %>
      </select>
      <button type="submit" class="btn btn-primary">
        <%= productToEdit ? 'Update' : 'Add' %>
      </button>
      <% if(productToEdit){ %>
        <a href="/products" class="btn btn-secondary">Cancel</a>
      <% } %>
    </form>

    <!-- Product Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(p => { %>
            <tr>
              <td><%= p.ProductId %></td>
              <td><%= p.ProductName %></td>
              <td><%= p.CategoryName %></td>
              <td>
                <a href="/products/edit/<%= p.ProductId %>" class="btn btn-warning btn-sm me-1">Edit</a>
                <form action="/products/delete/<%= p.ProductId %>" method="post" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-3">
      <ul class="pagination">
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="/products?page=<%= page-1 %>">Prev</a>
        </li>
        <li class="page-item active"><span class="page-link"><%= page %></span></li>
        <li class="page-item">
          <a class="page-link" href="/products?page=<%= page+1 %>">Next</a>
        </li>
      </ul>
    </nav>
  </div>

</body>
</html>
